<div class="page-header">
  <%= link_to new_payment_detail_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Payment detail
  <% end %>
  <h1>Listing payment_details</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Shipment</th>
            <th>Payment data</th>
            <th>Value</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @payment_details) do |payment_detail| %>
            <td><%= payment_detail.shipment_id %></td>
            <td><%= payment_detail.payment_data_id %></td>
            <td><%= payment_detail.value %></td>
            <td><%= link_to 'Show', payment_detail %></td>
        <td><%= link_to 'Edit', edit_payment_detail_path(payment_detail) %></td>
        <td><%= link_to 'Destroy', payment_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
