<div class="page-header">
  <%= link_to payment_details_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_payment_detail_path(@payment_detail), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show payment_detail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Shipment:</dt>
  <dd><%= @payment_detail.shipment_id %></dd>

  <dt>Payment data:</dt>
  <dd><%= @payment_detail.payment_data_id %></dd>

  <dt>Value:</dt>
  <dd><%= @payment_detail.value %></dd>

</dl>
