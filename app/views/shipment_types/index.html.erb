<div class="page-header">
  <%= link_to new_shipment_type_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Shipment type
  <% end %>
  <h1>Listing shipment_types</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Shipment type</th>
            <th>Type name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @shipment_types) do |shipment_type| %>
            <td><%= shipment_type.shipment_type_id %></td>
            <td><%= shipment_type.type_name %></td>
            <td><%= link_to 'Show', shipment_type %></td>
        <td><%= link_to 'Edit', edit_shipment_type_path(shipment_type) %></td>
        <td><%= link_to 'Destroy', shipment_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
