<div class="page-header">
  <%= link_to shipment_details_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_shipment_detail_path(@shipment_detail), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show shipment_detail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Shipment:</dt>
  <dd><%= @shipment_detail.shipment_id %></dd>

  <dt>Product:</dt>
  <dd><%= @shipment_detail.product_id %></dd>

  <dt>Quanitity:</dt>
  <dd><%= @shipment_detail.quanitity %></dd>

  <dt>Price per unit:</dt>
  <dd><%= @shipment_detail.price_per_unit %></dd>

  <dt>Price:</dt>
  <dd><%= @shipment_detail.price %></dd>

</dl>
