<h1>Boxes</h1>

<table>
  <thead>
    <tr>
      <th>Box</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Score</th>
      <th>Bussy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.box_id %></td>
        <td><%= box.name %></td>
        <td><%= box.description %></td>
        <td><%= box.location_id %></td>
        <td><%= box.phone %></td>
        <td><%= box.score %></td>
        <td><%= box.bussy %></td>
        <td><%= link_to 'Show', box %></td>
        <td><%= link_to 'Edit', edit_box_path(box) %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

