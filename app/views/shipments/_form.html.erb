<%= form_for(@shipment, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @shipment.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@shipment.errors.count, "error") %> prohibited this shipment from being saved:</h4>

      <ul>
      <% @shipment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :shipment_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :shipment_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :client_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :client_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time_created, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :time_created, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shipment_type_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :shipment_type_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :payment_type_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :payment_type_id, class: "form-control" %>
