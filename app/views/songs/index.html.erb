<div class="page-header">
  <%= link_to new_song_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Song
  <% end %>
  <h1>Listing songs</h1>
</div>

<div class="table-responsive">
  <%= form_tag(songs_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Songs" %>
    <%= submit_tag "Search" %>
  <% end %>
  <% if @products.present? %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Song</th>
            <th>Name</th>
            <th>Singer band</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Genere</th>
            <th>Code</th>
            <th>Rate</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
        <%= content_tag_for(:tr, @songs) do |song| %>
            <td><%= song.song_id %></td>
            <td><%= song.name %></td>
            <td><%= song.singer_band %></td>
            <td><%= song.description %></td>
            <td><%= song.duration %></td>
            <td><%= song.genere_id %></td>
            <td><%= song.code %></td>
            <td><%= song.rate %></td>
            <td><%= link_to 'Show', song %></td>
            <td><a href="karaoke_app/index.html?videoFile=<%= song.name%>.mp4&ipAddress=127.0.0.1" class="button">Pedir</a></td>
        <!--<td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
       <% end %>
    </tbody>
  </table>
  <% else %>
         <h2>There are not the song(s) <a class="label-danger"><%= params[:search] %></a><a href="/songs/"> go to index</a>.</h2>
   <% end %>
 </div>
