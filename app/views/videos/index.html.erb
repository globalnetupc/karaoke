<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br/>

<%= link_to "New Video", new_video_path, class: "btn btn-primary" %>

<br />
<br />

<table class = "table table-bordered table-striped">

   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>

      <% @videos.each do |vid| %>
         <tr>
            <td><%= vid.name %></td>
            <td><%= link_to "Download Video", vid.attachment_url %></td>
            <td><%= button_to "Delete",  vid, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{vid.name}?" %></td>
         </tr>
      <% end %>
   </tbody>

</table>
